////
javascript fuction to show and hide
 function myfunction(){
    var x=document.getElementById("id_name")
    if(x.className.indexOf("w3-show")== -1){
        x.className += "w3-show";
    }
    else{
        x.className = x.className.replace("w3-show","");
    }
 }



